generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum PlanType {
  FREE
  PRO
  ENTERPRISE
}

enum QuizStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum QuestionType {
  MC_SINGLE
  TRUE_FALSE
}

enum AIJobStatus {
  PENDING
  EXTRACTING
  GENERATING
  COMPLETED
  FAILED
}

enum GameState {
  LOBBY
  IN_PROGRESS
  COMPLETED
  ABORTED
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  passwordHash   String
  name           String
  planType       PlanType @default(FREE)
  status         String   @default("active")
  emailVerified  Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  quizzes        Quiz[]
  aiJobs         AIJob[]
  hostedGames    GameSession[] @relation("HostGames")
  playerSessions PlayerSession[]
  usage          Usage[]
}

model PlanLimit {
  planType             PlanType @id
  maxPlayersPerGame    Int
  maxQuizzes           Int
  maxAIQuizzesPerMonth Int
  createdAt            DateTime @default(now())
}

model Usage {
  id                      String   @id @default(cuid())
  userId                  String
  periodStart             DateTime
  periodEnd               DateTime
  aiQuizzesGeneratedCount Int      @default(0)
  gamesHostedCount        Int      @default(0)
  quizzesCreatedCount     Int      @default(0)
  user                    User     @relation(fields: [userId], references: [id])

  @@index([userId, periodStart, periodEnd])
}

model Quiz {
  id            String      @id @default(cuid())
  ownerId       String
  title         String
  description   String
  language      String      @default("en")
  tags          String[]    @default([])
  status        QuizStatus  @default(DRAFT)
  source        String      @default("MANUAL")
  version       Int         @default(1)
  lastUsedAt    DateTime?
  isAiGenerated Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  questions     Question[]
  owner         User        @relation(fields: [ownerId], references: [id])
  gameSessions  GameSession[]
  aiJobs        AIJob[]
}

model Question {
  id             String        @id @default(cuid())
  quizId         String
  prompt         String
  type           QuestionType  @default(MC_SINGLE)
  timeLimit      Int           @default(20)
  points         Int           @default(1000)
  isAiGenerated  Boolean       @default(false)
  reviewStatus   String        @default("pending")
  aiConfidence   Float?
  originalAiText String?
  orderIndex     Int
  quiz           Quiz          @relation(fields: [quizId], references: [id])
  options        Option[]
}

model Option {
  id          String   @id @default(cuid())
  questionId  String
  label       String
  isCorrect   Boolean  @default(false)
  question    Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model GameSession {
  id                    String      @id @default(cuid())
  quizId                String
  hostId                String
  code                  String      @unique
  state                 GameState   @default(LOBBY)
  currentQuestionIndex  Int         @default(0)
  settings              Json
  startedAt             DateTime?
  endedAt               DateTime?
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt
  quizSnapshot          Json
  host                  User        @relation("HostGames", fields: [hostId], references: [id])
  quiz                  Quiz        @relation(fields: [quizId], references: [id], onDelete: Cascade)
  players               PlayerSession[]

  @@index([code])
}

model PlayerSession {
  id               String      @id @default(cuid())
  gameId           String
  userId           String?
  nickname         String
  score            Int         @default(0)
  correctAnswers   Int         @default(0)
  lastSeenAt       DateTime    @default(now())
  connectionStatus String      @default("connected")
  game             GameSession @relation(fields: [gameId], references: [id])
  user             User?       @relation(fields: [userId], references: [id])
}

model AIJob {
  id                     String      @id @default(cuid())
  userId                 String
  sourceType             String
  sourceRef              String
  questionCountRequested Int         @default(10)
  difficulty             String      @default("mixed")
  status                 AIJobStatus @default(PENDING)
  failureReason          String?
  quizId                 String?
  createdAt              DateTime    @default(now())
  updatedAt              DateTime    @updatedAt
  user                   User        @relation(fields: [userId], references: [id])
  quiz                   Quiz?       @relation(fields: [quizId], references: [id])
}
